<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.ignore.com"
             xmlns:view="clr-namespace:Hylasoft.OrdersGui.View"
             x:Class="Hylasoft.OrdersGui.MainPage"
             mc:Ignorable="d ignore"
             d:DesignHeight="400" d:DesignWidth="1100"
             DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid x:Name="LayoutRoot" Margin="50,0">
            <view:LoadOrderManager Name="LoadOrderManagerView" />
            <view:LoadOrderDetails Name="OrderDetailsView" Visibility="Collapsed" />
        </Grid>
    </Grid>
</UserControl>
